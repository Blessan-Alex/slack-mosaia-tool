{
  "name": "Slack Connector",
  "description": "A tool to read channel history and post messages to Slack",
  "schema": {
    "type": "function",
    "function": {
      "name": "Slack Connector",
      "description": "A tool to read channel history and post messages to Slack",
      "strict": true,
      "parameters": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "description": "The action to perform: 'read' for reading channel history or 'post' for posting a message",
            "enum": ["read", "post"]
          },
          "channel_id": {
            "type": "string",
            "description": "The ID of the Slack channel"
          },
          "limit": {
            "type": "integer",
            "description": "Number of messages to fetch (only for read action)",
            "default": 5
          },
          "text": {
            "type": "string",
            "description": "The message text to post (only for post action)"
          }
        },
        "required": [
          "action",
          "channel_id"
        ],
        "additionalProperties": false
      }
    }
  },
  "envVars": [
    "SLACK_BOT_TOKEN"
  ],
  "server": {
    "startCommand": "npm run start:dev",
    "port": 3000,
    "endpoint": "/",
    "method": "POST"
  }
} 